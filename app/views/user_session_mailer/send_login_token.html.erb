<%
  login_url = user_token_url(@url_options)
%>

<% content_for :salutation do %>
  Hello,
<% end %>

<% content_for :body do %>
  <p>
    Please <%= link_to 'click here', login_url%> to login to your <%= @school_name%> account.
  </p>

  <%= render 'mailers/link_fallback', url: login_url%>

  <p>
    Please note that this is a private URL and should not be shared.
  </p>

  <p>
    Please note that the link will expire by <%= @user.login_token_expiration_time %>. If the link has expired, you can request another one-time token from <a href=<%= sign_in_with_email_url %>>the sign-in page</a>.
  </p>
<% end %>

<% content_for(:signature) do %>
  <div>
    <%= @school_name %>
  </div>
<% end %>
